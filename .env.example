# Environment Variables Example for OpenHands with PostgreSQL and Redis

# PostgreSQL Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=openhands
DB_USER=postgres
DB_PASS=your_secure_postgres_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# JWT Secret (for encrypting secrets in database)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here

# LLM Configuration
LLM_API_KEY=your_llm_api_key
LLM_MODEL=gpt-4o
LLM_BASE_URL=

# Workspace Configuration
WORKSPACE_BASE=/opt/workspace_base

# Sandbox Configuration
SANDBOX_USER_ID=0
SANDBOX_TIMEOUT=120
USE_HOST_NETWORK=false

# Security Configuration
SECURITY_CONFIRMATION_MODE=false
SECURITY_ANALYZER=llm

# File Storage
FILE_STORE=local
FILE_STORE_PATH=/.openhands

# Agent Configuration
DEFAULT_AGENT=CodeActAgent
MAX_ITERATIONS=500
MAX_BUDGET_PER_TASK=0.0

# GCP Configuration (optional, for GCP Cloud SQL)
# GCP_DB_INSTANCE=
# GCP_PROJECT=
# GCP_REGION=
